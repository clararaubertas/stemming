<h3>Change your password:</h3>
<%= form_tag :action => 'change_password' %>
<table>
<tr><td><label for="password">Password</label></td>
<td><%= password_field_tag 'password' %></td></tr>
<tr><td>Confirm Password</td>
<td><%= password_field_tag 'password_confirmation' %></td></tr>
<tr><td></td><td><%= submit_tag 'Reset password' %></td></tr>
</form>
