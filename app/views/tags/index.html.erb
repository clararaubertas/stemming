<h2>Browse <%= params[:kind].capitalize %></h2>
<p class="topbox"><% unless @least.to_i == 1 %>
<a class="button" href="?least=<%= (@least.to_i - 1) %>">more tags</a>
<% end %>
<% unless @least.to_i == 10 %>
<a class="button" href="?least=<%= (@least.to_i + 1) %>">fewer tags</a>
<% end %>
</p>
<div class="box">
<% tag_cloud @tags, %w(css1 css2 css3 css4 css5 css6) do |tag, css_class| %>
  <%= link_to tag.name.gsub('&', '&amp;'), "/#{tag.object_type.downcase}s/browse/#{tag.to_s.gsub(' ', '%20')}", :class => css_class %>
<% end %>
</div>




